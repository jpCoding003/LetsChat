<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LetsChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- The main application theme. This is the one you should reference in your AndroidManifest.xml -->
    <style name="Theme.LetsChat" parent="Base.Theme.LetsChat" />

    <!-- This style is used for the Toolbar -->
    <style name="Theme.LetsChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- This style is used for the popup menu on the Toolbar -->
    <style name="Theme.LetsChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- A theme for activities that should not have an action bar -->
    <style name="Theme.LetsChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
